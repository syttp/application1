<p class="notice"><%= flash[:destroy] %></p>
<h1>Books</h1>
<table>
	<tr>
 		<th>Title</th>
 		<th>Body</th>
 	</tr>
 		<th><thcolspan="3"></th>
		<% @books.each do |list| %>
		<tr>
			<td><%= list.title %></td>
			<td><%= list.body %></td>
			<td><%= link_to "show", book_path(list.id) %></td>
			<td><%= link_to "edit", edit_book_path(list.id) %></td>
			<td><%= link_to "destroy",book_path(list.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tr>
</table>
<!-- form_for部分 -->
<%= form_for(@book,url:'/books') do |f| %>

	<h2>New book</h2>

	<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<h2 class=error_text>2 errors prohibited this book from being saved:</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<h4 class='text1'>Title</h4>
 <div class='input1'>
 	<%= f.text_field :title %>
 </div>

<h4 class= 'text1'>Body</h4>
  <div class='input1'>
	<%= f.text_area :body %>
  </div>
 	<br>
 	<%= f.submit 'Create Book' %>
 </div>
<% end %>

